{
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"bracketSameLine": true,
	"endOfLine": "auto",
	"printWidth": 130,
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^@angular/(.*)$",
		"<THIRD_PARTY_MODULES>",
		"^@app/(.*)$",
		"^@assets/(.*)$",
		"^@atoms/(.*)$",
		"^@components/(.*)$",
		"^@constants/(.*)$",
		"^@helpers/(.*)$",
		"^@services/(.*)$",
		"^@stores/(.*)$",
		"^@views/(.*)$",
		"^@/types/(.*)$",
		"^@/(.*)$",
		"^[./]"
	]
}
